<div class="text-center">
  <h1 class="mt-3 mb-3 font-weight-normal">Sign in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin m-auto', style: 'width: 500px'}) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'sr-only' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email address', class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'sr-only' %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3 mt-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mb-3">
      <%= f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block' %>
    </div>
    <span class="mt-5 mb-3 text-muted">&copy; 2017-2019</span>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<div class="text-center">
  <h1 class="mt-3 mb-3 font-weight-normal">Resend confirmation instructions</h1>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'm-auto', style: 'width: 500px' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'sr-only' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'Email address', class: 'form-control', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>

    <div class="actions mt-3 mb-3">
      <%= f.submit "Resend confirmation instructions", class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

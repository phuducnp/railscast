<div class="mx-auto mt-5" style="width: 600px;">
  <div>
    <h3><%= @article.title %></h3>
  </div>
  <div>
    <strong>Text:</strong>
    <%= @article.text %>
  </div>
  <div class="mt-3">
    <%= link_to('Edit', edit_article_path(@article), class: 'btn btn-outline-warning btn-sm') %>
    <%= link_to(articles_path, class: "btn btn-outline-secondary ml-2 btn-sm") do %>
      <i class="fa fa-arrow-left" aria-hidden="true"></i> <%= 'Back' %>
    <% end %>
  </div>
</div>
